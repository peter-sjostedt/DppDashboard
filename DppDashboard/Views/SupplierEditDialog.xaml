<Window x:Class="DppDashboard.Views.SupplierEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:DppDashboard.Converters"
        Title="{Binding DialogTitle}"
        Icon="/dpp.ico"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height" Width="500"
        ResizeMode="NoResize">
    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    </Window.Resources>
    <StackPanel Margin="20">
        <TextBlock Text="Leverantörsnamn *" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding SupplierName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

        <TextBlock Text="Plats" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding SupplierLocation, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

        <TextBlock Text="Facility Registry" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding FacilityRegistry, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

        <TextBlock Text="Facility Identifier" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding FacilityIdentifier, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

        <TextBlock Text="Operator Registry" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding OperatorRegistry, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

        <TextBlock Text="Operator Identifier" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding OperatorIdentifier, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

        <TextBlock Text="Land - Konfektion (ISO 2)" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding CountryOfOriginConfection, UpdateSourceTrigger=PropertyChanged}" MaxLength="2" Margin="0,0,0,12" />

        <TextBlock Text="Land - Färgning (ISO 2)" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding CountryOfOriginDyeing, UpdateSourceTrigger=PropertyChanged}" MaxLength="2" Margin="0,0,0,12" />

        <TextBlock Text="Land - Vävning (ISO 2)" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding CountryOfOriginWeaving, UpdateSourceTrigger=PropertyChanged}" MaxLength="2" Margin="0,0,0,12" />

        <TextBlock Text="LEI" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding Lei, UpdateSourceTrigger=PropertyChanged}" MaxLength="20" Margin="0,0,0,12" />

        <TextBlock Text="GS1 Company Prefix" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding Gs1CompanyPrefix, UpdateSourceTrigger=PropertyChanged}" MaxLength="12" Margin="0,0,0,12" />

        <CheckBox Content="Aktiv" IsChecked="{Binding IsActive}" Margin="0,0,0,12"
                  Visibility="{Binding ShowIsActive, Converter={StaticResource BoolToVisibility}}" />

        <TextBlock Text="{Binding StatusMessage}" Foreground="Red" Margin="0,0,0,8"
                   TextWrapping="Wrap" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Spara" Command="{Binding SaveCommand}"
                    Width="80" Padding="8,4" Margin="0,0,8,0" IsDefault="True" />
            <Button Content="Avbryt" Command="{Binding CancelCommand}"
                    Width="80" Padding="8,4" IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Window>
