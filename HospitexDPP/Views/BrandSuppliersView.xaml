<UserControl x:Class="HospitexDPP.Views.BrandSuppliersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:HospitexDPP.Controls">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid>
        <!-- Main content -->
        <DockPanel Margin="24,20">
            <!-- Toolbar: search only (read-only view, no add button) -->
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,16">
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{DynamicResource SearchTextBox}"
                         Tag="{DynamicResource Search_Suppliers}" />
            </DockPanel>

            <!-- Empty state -->
            <controls:EmptyState Title="{DynamicResource Empty_NoSuppliers}"
                                 Description="{DynamicResource Empty_NoSuppliersDesc}">
                <controls:EmptyState.Style>
                    <Style TargetType="controls:EmptyState">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasSuppliers}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </controls:EmptyState.Style>
            </controls:EmptyState>

            <!-- Grouped suppliers list -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Visibility="{Binding HasSuppliers, Converter={StaticResource BoolToVis}}">
                <ItemsControl ItemsSource="{Binding GroupedSuppliers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander IsExpanded="True" Style="{DynamicResource SectionExpander}"
                                      Margin="0,0,0,4">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding SupplierName}" FontWeight="SemiBold"
                                                   FontSize="14" Foreground="{DynamicResource TextPrimaryBrush}" />
                                        <TextBlock Foreground="{DynamicResource TextSecondaryBrush}"
                                                   FontSize="13" Margin="8,0,0,0" VerticalAlignment="Center">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="({0} tyger)">
                                                    <Binding Path="MaterialCount" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </Expander.Header>

                                <StackPanel Margin="16,8,0,8">
                                    <!-- Supplier location -->
                                    <TextBlock Text="{Binding SupplierLocation}"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="12" Margin="0,0,0,8">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SupplierLocation}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SupplierLocation}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Materials list -->
                                    <ItemsControl ItemsSource="{Binding Materials}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{DynamicResource SurfaceBrush}"
                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                        BorderThickness="1" CornerRadius="6"
                                                        Padding="12,10" Margin="0,0,0,4"
                                                        Cursor="Hand"
                                                        MouseLeftButtonUp="Material_Click">
                                                    <DockPanel>
                                                        <controls:StatusBadge IsActive="{Binding IsActive}"
                                                                              DockPanel.Dock="Right"
                                                                              VerticalAlignment="Center" />
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding MaterialName}"
                                                                       FontWeight="SemiBold" FontSize="13"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                                                            <TextBlock Text="{Binding MaterialType}"
                                                                       FontSize="12"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding MaterialType}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding MaterialType}" Value="">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </DockPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>

        <!-- Drawer overlay (read-only material detail) -->
        <controls:DrawerPanel IsOpen="{Binding IsDrawerOpen}"
                              CloseCommand="{Binding CancelDrawerCommand}">
            <controls:DrawerPanel.DrawerContent>
                <DockPanel>
                    <!-- Header -->
                    <TextBlock Text="{Binding DrawerTitle}" Style="{DynamicResource DrawerTitle}"
                               DockPanel.Dock="Top" Margin="24,20,24,0" />

                    <!-- Footer -->
                    <StackPanel DockPanel.Dock="Bottom" Margin="24,0,24,20">
                        <Button Content="{DynamicResource Button_Close}"
                                Style="{DynamicResource SecondaryButton}"
                                Command="{Binding CancelDrawerCommand}"
                                HorizontalAlignment="Left" />
                    </StackPanel>

                    <!-- Scrollable content -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="24,16,24,12" Padding="0,0,12,0">
                        <StackPanel>
                            <!-- Basic info -->
                            <TextBlock Text="{DynamicResource Section_MaterialInfo}"
                                       Style="{DynamicResource SectionHeader}" Margin="0,0,0,12" />
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="110" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource Field_MaterialName}"
                                           Style="{DynamicResource FormLabel}" TextAlignment="Right"
                                           VerticalAlignment="Center" Margin="0,0,12,8" />
                                <TextBox Grid.Row="0" Grid.Column="1" Style="{DynamicResource ReadOnlyFormTextBox}"
                                         Text="{Binding MaterialName, Mode=OneWay}" Margin="0,0,0,8" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource Field_MaterialType}"
                                           Style="{DynamicResource FormLabel}" TextAlignment="Right"
                                           VerticalAlignment="Center" Margin="0,0,12,8" />
                                <TextBox Grid.Row="1" Grid.Column="1" Style="{DynamicResource ReadOnlyFormTextBox}"
                                         Text="{Binding MaterialType, Mode=OneWay}" Margin="0,0,0,8" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource Field_Description}"
                                           Style="{DynamicResource FormLabel}" TextAlignment="Right"
                                           VerticalAlignment="Top" Margin="0,0,12,8" />
                                <TextBox Grid.Row="2" Grid.Column="1" Style="{DynamicResource ReadOnlyFormTextBox}"
                                         Text="{Binding MaterialDescription, Mode=OneWay}"
                                         TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60" Margin="0,0,0,8" />
                            </Grid>

                            <!-- Compositions -->
                            <Expander IsExpanded="True" Style="{DynamicResource SectionExpander}">
                                <Expander.Header>
                                    <TextBlock Text="{DynamicResource Section_Compositions}"
                                               Style="{DynamicResource SectionHeader}" />
                                </Expander.Header>
                                <DataGrid ItemsSource="{Binding MaterialCompositions}"
                                          Style="{DynamicResource InlineDataGrid}"
                                          Margin="0,8,0,8">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Material"
                                                            Binding="{Binding ContentName}" Width="*" />
                                        <DataGridTextColumn Header="Andel"
                                                            Binding="{Binding ContentValue}" Width="80" />
                                        <DataGridTextColumn Header="Källa"
                                                            Binding="{Binding ContentSource}" Width="*" />
                                        <DataGridTextColumn Header="Återvunnet"
                                                            Binding="{Binding Recycled}" Width="80" />
                                        <DataGridTextColumn Header="Återv.%"
                                                            Binding="{Binding RecycledPercentage}" Width="60" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Expander>

                            <!-- Certifications -->
                            <Expander IsExpanded="True" Style="{DynamicResource SectionExpander}">
                                <Expander.Header>
                                    <TextBlock Text="{DynamicResource Section_Certifications}"
                                               Style="{DynamicResource SectionHeader}" />
                                </Expander.Header>
                                <DataGrid ItemsSource="{Binding MaterialCertifications}"
                                          Style="{DynamicResource InlineDataGrid}"
                                          Margin="0,8,0,8">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Certifiering"
                                                            Binding="{Binding Certification}" Width="*" />
                                        <DataGridTextColumn Header="ID"
                                                            Binding="{Binding CertificationId}" Width="*" />
                                        <DataGridTextColumn Header="Giltig t.o.m."
                                                            Binding="{Binding ValidUntil}" Width="*" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Expander>

                            <!-- Supply Chain -->
                            <Expander IsExpanded="True" Style="{DynamicResource SectionExpander}">
                                <Expander.Header>
                                    <TextBlock Text="{DynamicResource Section_SupplyChain}"
                                               Style="{DynamicResource SectionHeader}" />
                                </Expander.Header>
                                <DataGrid ItemsSource="{Binding MaterialSupplyChain}"
                                          Style="{DynamicResource InlineDataGrid}"
                                          Margin="0,8,0,8">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Steg"
                                                            Binding="{Binding ProcessStep}" Width="*" />
                                        <DataGridTextColumn Header="Anläggning"
                                                            Binding="{Binding FacilityName}" Width="*" />
                                        <DataGridTextColumn Header="Land"
                                                            Binding="{Binding Country}" Width="80" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </controls:DrawerPanel.DrawerContent>
        </controls:DrawerPanel>
    </Grid>
</UserControl>
