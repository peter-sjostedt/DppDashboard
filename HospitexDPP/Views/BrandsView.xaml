<UserControl x:Class="HospitexDPP.Views.BrandsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left: Brand list -->
        <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="1" Margin="4" Padding="8" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0">
                    <TextBlock Text="{Binding StatusText}" Style="{StaticResource PanelHeaderStyle}" VerticalAlignment="Center" />
                    <Button Content="+ Ny brand" Command="{Binding NewBrandCommand}"
                            HorizontalAlignment="Right" Padding="8,3" Margin="2" />
                </DockPanel>
                <ListBox Grid.Row="1" ItemsSource="{Binding Brands}"
                         DisplayMemberPath="BrandName"
                         SelectedItem="{Binding SelectedBrand}"
                         BorderThickness="1" BorderBrush="#DDD" Background="Transparent" />
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                    <Button Content="Redigera" Command="{Binding EditBrandCommand}" Padding="8,3" Margin="2" />
                    <Button Content="Ta bort" Command="{Binding DeleteBrandCommand}" Padding="8,3" Margin="2" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Middle: Products -->
        <Border Grid.Column="1" BorderBrush="#DDDDDD" BorderThickness="1" Margin="4" Padding="8" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0">
                    <TextBlock Text="{Binding SelectedContext}" Style="{StaticResource PanelHeaderStyle}" VerticalAlignment="Center" />
                    <Button Content="+ Ny produkt" Command="{Binding NewProductCommand}"
                            HorizontalAlignment="Right" Padding="8,3" Margin="2" />
                </DockPanel>
                <ListBox Grid.Row="1" ItemsSource="{Binding Products}"
                         SelectedItem="{Binding SelectedProduct}"
                         BorderThickness="1" BorderBrush="#DDD">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4,3">
                                <TextBlock Text="{Binding ProductName}" FontWeight="Medium" />
                                <TextBlock Text="{Binding ArticleNumber}" Foreground="Gray" FontSize="11" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                    <Button Content="Redigera" Command="{Binding EditProductCommand}" Padding="8,3" Margin="2" />
                    <Button Content="Ta bort" Command="{Binding DeleteProductCommand}" Padding="8,3" Margin="2" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right: Product detail -->
        <Border Grid.Column="2" BorderBrush="#DDDDDD" BorderThickness="1" Margin="4" Padding="8" Background="White">
            <Grid>
                <TextBlock Text="Laddar produktdata..."
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           Foreground="Gray" FontSize="13"
                           Visibility="{Binding IsLoadingProduct, Converter={StaticResource BoolToVis}}" />

                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                           Foreground="Gray" FontSize="13"
                           Text="Välj en produkt för detaljer">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ProductDetail}" Value="{x:Null}" />
                                        <Condition Binding="{Binding IsLoadingProduct}" Value="False" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ProductDetail}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>

                    <StackPanel DataContext="{Binding ProductDetail}">
                        <TextBlock Text="{Binding ProductName}" Style="{StaticResource PanelHeaderStyle}"
                                   TextWrapping="Wrap" />

                        <TextBlock Text="Produktinfo" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,6" />
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" /><ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition /><RowDefinition /><RowDefinition /><RowDefinition />
                                <RowDefinition /><RowDefinition /><RowDefinition /><RowDefinition />
                                <RowDefinition /><RowDefinition /><RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Artikel:" Foreground="Gray" Margin="0,0,8,2" />
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ArticleNumber}" TextWrapping="Wrap" Margin="0,0,0,2" />
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="GTIN:" Foreground="Gray" Margin="0,0,8,2" />
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Gtin}" TextWrapping="Wrap" Margin="0,0,0,2" />
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Kategori:" Foreground="Gray" Margin="0,0,8,2" />
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Category}" TextWrapping="Wrap" Margin="0,0,0,2" />
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Produktgrupp:" Foreground="Gray" Margin="0,0,8,2" />
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ProductGroup}" TextWrapping="Wrap" Margin="0,0,0,2" />
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Typ:" Foreground="Gray" Margin="0,0,8,2" />
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding TypeItem}" TextWrapping="Wrap" Margin="0,0,0,2" />
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Kön:" Foreground="Gray" Margin="0,0,8,2" />
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Gender}" TextWrapping="Wrap" Margin="0,0,0,2" />
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Åldersgrupp:" Foreground="Gray" Margin="0,0,8,2" />
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding AgeGroup}" TextWrapping="Wrap" Margin="0,0,0,2" />
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Marknad:" Foreground="Gray" Margin="0,0,8,2" />
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding MarketSegment}" TextWrapping="Wrap" Margin="0,0,0,2" />
                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Pris:" Foreground="Gray" Margin="0,0,8,2" />
                            <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock Text="{Binding Msrp}" /><TextBlock Text=" " /><TextBlock Text="{Binding PriceCurrency}" />
                            </StackPanel>
                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Vikt:" Foreground="Gray" Margin="0,0,8,2" />
                            <StackPanel Grid.Row="9" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,2">
                                <TextBlock Text="{Binding NetWeight}" /><TextBlock Text=" " /><TextBlock Text="{Binding WeightUnit}" />
                            </StackPanel>
                            <TextBlock Grid.Row="10" Grid.Column="0" Text="Digital bärare:" Foreground="Gray" Margin="0,0,8,2" />
                            <TextBlock Grid.Row="10" Grid.Column="1" Text="{Binding DataCarrierType}" TextWrapping="Wrap" Margin="0,0,0,2" />
                        </Grid>

                        <!-- Varianter -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel"><Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers><DataTrigger Binding="{Binding Variants}" Value="{x:Null}"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger></Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="Varianter" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,6" />
                            <DataGrid ItemsSource="{Binding Variants}" AutoGenerateColumns="False" IsReadOnly="True"
                                      HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                                      BorderThickness="1" BorderBrush="#DDD" MaxHeight="200" CanUserResizeRows="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Artikelnr" Binding="{Binding ItemNumber}" Width="Auto" />
                                    <DataGridTextColumn Header="Storlek" Binding="{Binding Size}" Width="Auto" />
                                    <DataGridTextColumn Header="Färg (brand)" Binding="{Binding ColorBrand}" Width="Auto" />
                                    <DataGridTextColumn Header="Färg (generell)" Binding="{Binding ColorGeneral}" Width="Auto" />
                                    <DataGridTextColumn Header="GTIN" Binding="{Binding Gtin}" Width="Auto" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <!-- Skötsel -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel"><Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers><DataTrigger Binding="{Binding Care}" Value="{x:Null}"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger></Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="Skötsel" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,6" />
                            <TextBlock Text="Skötseltext:" Foreground="Gray" Margin="0,0,0,2" />
                            <TextBlock Text="{Binding Care.CareText}" TextWrapping="Wrap" Margin="0,0,0,6" />
                            <TextBlock Text="Säkerhetsinformation:" Foreground="Gray" Margin="0,0,0,2" />
                            <TextBlock Text="{Binding Care.SafetyInformation}" TextWrapping="Wrap" />
                        </StackPanel>

                        <!-- Compliance -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel"><Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers><DataTrigger Binding="{Binding Compliance}" Value="{x:Null}"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger></Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="Compliance" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,6" />
                            <Grid>
                                <Grid.ColumnDefinitions><ColumnDefinition Width="Auto" /><ColumnDefinition Width="*" /></Grid.ColumnDefinitions>
                                <Grid.RowDefinitions><RowDefinition /><RowDefinition /><RowDefinition /><RowDefinition /><RowDefinition /></Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Farliga ämnen:" Foreground="Gray" Margin="0,0,8,2" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Compliance.HarmfulSubstances}" TextWrapping="Wrap" Margin="0,0,0,2" />
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Certifieringar:" Foreground="Gray" Margin="0,0,8,2" />
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Compliance.Certifications}" TextWrapping="Wrap" Margin="0,0,0,2" />
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Kemisk standard:" Foreground="Gray" Margin="0,0,8,2" />
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Compliance.ChemicalComplianceStandard}" TextWrapping="Wrap" Margin="0,0,0,2" />
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Mikrofibrer:" Foreground="Gray" Margin="0,0,8,2" />
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Compliance.Microfibers}" TextWrapping="Wrap" Margin="0,0,0,2" />
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Spårbarhet:" Foreground="Gray" Margin="0,0,8,2" />
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Compliance.TraceabilityProvider}" TextWrapping="Wrap" Margin="0,0,0,2" />
                            </Grid>
                        </StackPanel>

                        <!-- Cirkularitet -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel"><Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers><DataTrigger Binding="{Binding Circularity}" Value="{x:Null}"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger></Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="Cirkularitet" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,6" />
                            <Grid>
                                <Grid.ColumnDefinitions><ColumnDefinition Width="Auto" /><ColumnDefinition Width="*" /></Grid.ColumnDefinitions>
                                <Grid.RowDefinitions><RowDefinition /><RowDefinition /><RowDefinition /></Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Återvinningsbarhet:" Foreground="Gray" Margin="0,0,8,2" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Circularity.Recyclability}" TextWrapping="Wrap" Margin="0,0,0,2" />
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Returinstruktioner:" Foreground="Gray" Margin="0,0,8,2" />
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Circularity.TakeBackInstructions}" TextWrapping="Wrap" Margin="0,0,0,2" />
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Reparation:" Foreground="Gray" Margin="0,0,8,2" />
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Circularity.RepairInstructions}" TextWrapping="Wrap" Margin="0,0,0,2" />
                            </Grid>
                        </StackPanel>

                        <!-- Hållbarhet -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel"><Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers><DataTrigger Binding="{Binding Sustainability}" Value="{x:Null}"><Setter Property="Visibility" Value="Collapsed" /></DataTrigger></Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="Hållbarhet" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,6" />
                            <Grid>
                                <Grid.ColumnDefinitions><ColumnDefinition Width="Auto" /><ColumnDefinition Width="*" /></Grid.ColumnDefinitions>
                                <Grid.RowDefinitions><RowDefinition /><RowDefinition /></Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Uttalande:" Foreground="Gray" Margin="0,0,8,2" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Sustainability.BrandStatement}" TextWrapping="Wrap" Margin="0,0,0,2" />
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Miljöavtryck:" Foreground="Gray" Margin="0,0,8,2" />
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Sustainability.EnvironmentalFootprint}" TextWrapping="Wrap" Margin="0,0,0,2" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
