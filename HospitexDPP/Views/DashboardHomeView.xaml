<UserControl x:Class="HospitexDPP.Views.DashboardHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40">
        <StackPanel Width="500">
            <TextBlock Text="DPP Dashboard" FontWeight="Bold" FontSize="28"
                       HorizontalAlignment="Center" Margin="0,0,0,4" />
            <TextBlock Text="Digital Product Passport - Administrering"
                       HorizontalAlignment="Center" Foreground="Gray" FontSize="14" Margin="0,0,0,20" />
            <Separator Margin="0,0,0,24" />

            <!-- Stats grid -->
            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="220" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="12" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="12" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Row 1 -->
                <Border Grid.Row="0" Grid.Column="0" Background="#F5F5F5" CornerRadius="4" Padding="16,12" BorderBrush="#DDDDDD" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding BrandCount}" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" />
                        <TextBlock Text="Brands" Foreground="Gray" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="0" Grid.Column="2" Background="#F5F5F5" CornerRadius="4" Padding="16,12" BorderBrush="#DDDDDD" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding SupplierCount}" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" />
                        <TextBlock Text="Suppliers" Foreground="Gray" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Row 2 -->
                <Border Grid.Row="2" Grid.Column="0" Background="#F5F5F5" CornerRadius="4" Padding="16,12" BorderBrush="#DDDDDD" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding ProductCount}" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" />
                        <TextBlock Text="Produkter" Foreground="Gray" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="2" Grid.Column="2" Background="#F5F5F5" CornerRadius="4" Padding="16,12" BorderBrush="#DDDDDD" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding VariantCount}" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" />
                        <TextBlock Text="Varianter" Foreground="Gray" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Row 3 -->
                <Border Grid.Row="4" Grid.Column="0" Background="#F5F5F5" CornerRadius="4" Padding="16,12" BorderBrush="#DDDDDD" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding BatchCount}" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" />
                        <TextBlock Text="Batchar" Foreground="Gray" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
                <Border Grid.Row="4" Grid.Column="2" Background="#F5F5F5" CornerRadius="4" Padding="16,12" BorderBrush="#DDDDDD" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding ItemCount}" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" />
                        <TextBlock Text="Items" Foreground="Gray" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>

            <TextBlock Text="{Binding StatusText}" Foreground="Gray" FontSize="11"
                       HorizontalAlignment="Center" Margin="0,24,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
