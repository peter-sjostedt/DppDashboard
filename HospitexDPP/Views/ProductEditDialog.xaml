<Window x:Class="HospitexDPP.Views.ProductEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding DialogTitle}"
        Icon="/dpp.ico"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height" Width="550"
        MaxHeight="700"
        ResizeMode="NoResize">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Grundinfo -->
            <TextBlock Text="Grundinfo" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,4" />
            <TextBlock Text="Produktnamn *" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <TextBlock Text="Beskrivning" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True" TextWrapping="Wrap" Height="60" Margin="0,0,0,12" />

            <TextBlock Text="Foto URL" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding PhotoUrl, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <TextBlock Text="Artikelnummer" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding ArticleNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <!-- Identifiering -->
            <TextBlock Text="Identifiering" FontWeight="SemiBold" FontSize="13" Margin="0,12,0,4" />
            <TextBlock Text="GTIN-typ" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox SelectedValue="{Binding GtinType}" SelectedValuePath="Content" IsEditable="True" Margin="0,0,0,12">
                <ComboBoxItem Content="GTIN" />
                <ComboBoxItem Content="SKU" />
                <ComboBoxItem Content="Style Number" />
            </ComboBox>

            <TextBlock Text="GTIN" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding Gtin, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <TextBlock Text="HS-kodsystem" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding CommodityCodeSystem, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <TextBlock Text="HS-kod" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding CommodityCodeNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <!-- Försäljning -->
            <TextBlock Text="Försäljning" FontWeight="SemiBold" FontSize="13" Margin="0,12,0,4" />
            <TextBlock Text="Försäljningsår" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding YearOfSale, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <TextBlock Text="Säsong" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox SelectedValue="{Binding SeasonOfSale}" SelectedValuePath="Content" IsEditable="True" Margin="0,0,0,12">
                <ComboBoxItem Content="SP" />
                <ComboBoxItem Content="SU" />
                <ComboBoxItem Content="AW" />
                <ComboBoxItem Content="FW" />
            </ComboBox>

            <TextBlock Text="Valuta" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox SelectedValue="{Binding PriceCurrency}" SelectedValuePath="Content" IsEditable="True" Margin="0,0,0,12">
                <ComboBoxItem Content="EUR" />
                <ComboBoxItem Content="SEK" />
                <ComboBoxItem Content="USD" />
                <ComboBoxItem Content="GBP" />
            </ComboBox>

            <TextBlock Text="Rek. pris" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding Msrp, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <TextBlock Text="Andrahandspris" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding ResalePrice, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <!-- Kategorisering -->
            <TextBlock Text="Kategorisering" FontWeight="SemiBold" FontSize="13" Margin="0,12,0,4" />
            <TextBlock Text="Kategori" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox SelectedValue="{Binding Category}" SelectedValuePath="Content" IsEditable="True" Margin="0,0,0,12">
                <ComboBoxItem Content="clothing" />
                <ComboBoxItem Content="accessories" />
                <ComboBoxItem Content="footwear" />
            </ComboBox>

            <TextBlock Text="Produktgrupp" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox SelectedValue="{Binding ProductGroup}" SelectedValuePath="Content" IsEditable="True" Margin="0,0,0,12">
                <ComboBoxItem Content="Top" />
                <ComboBoxItem Content="Bottom" />
                <ComboBoxItem Content="Full body" />
                <ComboBoxItem Content="Accessories" />
            </ComboBox>

            <TextBlock Text="Typ - Linje" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox SelectedValue="{Binding TypeLineConcept}" SelectedValuePath="Content" IsEditable="True" Margin="0,0,0,12">
                <ComboBoxItem Content="Active Wear" />
                <ComboBoxItem Content="Sleep Wear" />
                <ComboBoxItem Content="Work Wear" />
                <ComboBoxItem Content="Casual Wear" />
            </ComboBox>

            <TextBlock Text="Typ - Plagg" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox SelectedValue="{Binding TypeItem}" SelectedValuePath="Content" IsEditable="True" Margin="0,0,0,12">
                <ComboBoxItem Content="Jacket" />
                <ComboBoxItem Content="Pants" />
                <ComboBoxItem Content="Blouse" />
                <ComboBoxItem Content="Tunic" />
                <ComboBoxItem Content="T-Shirt" />
                <ComboBoxItem Content="Coat" />
                <ComboBoxItem Content="Gown" />
            </ComboBox>

            <TextBlock Text="Åldersgrupp" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding AgeGroup, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <TextBlock Text="Kön" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox SelectedValue="{Binding Gender}" SelectedValuePath="Content" IsEditable="True" Margin="0,0,0,12">
                <ComboBoxItem Content="male" />
                <ComboBoxItem Content="female" />
                <ComboBoxItem Content="unisex" />
            </ComboBox>

            <TextBlock Text="Marknadssegment" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox SelectedValue="{Binding MarketSegment}" SelectedValuePath="Content" IsEditable="True" Margin="0,0,0,12">
                <ComboBoxItem Content="mass-market" />
                <ComboBoxItem Content="mid-price" />
                <ComboBoxItem Content="premium" />
                <ComboBoxItem Content="luxury" />
            </ComboBox>

            <!-- Egenskaper -->
            <TextBlock Text="Egenskaper" FontWeight="SemiBold" FontSize="13" Margin="0,12,0,4" />
            <TextBlock Text="Vattenegenskaper" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding WaterProperties, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <TextBlock Text="Nettovikt" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding NetWeight, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <TextBlock Text="Viktenhet" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox SelectedValue="{Binding WeightUnit}" SelectedValuePath="Content" IsEditable="True" Margin="0,0,0,12">
                <ComboBoxItem Content="kg" />
                <ComboBoxItem Content="g" />
            </ComboBox>

            <!-- Digital identifierare -->
            <TextBlock Text="Digital identifierare" FontWeight="SemiBold" FontSize="13" Margin="0,12,0,4" />
            <TextBlock Text="Bärartyp" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox SelectedValue="{Binding DataCarrierType}" SelectedValuePath="Content" IsEditable="True" Margin="0,0,0,12">
                <ComboBoxItem Content="RFID" />
                <ComboBoxItem Content="NFC" />
                <ComboBoxItem Content="QR" />
                <ComboBoxItem Content="Barcode" />
            </ComboBox>

            <TextBlock Text="Bärarmaterial" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding DataCarrierMaterial, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <TextBlock Text="Bärarplacering" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox Text="{Binding DataCarrierLocation, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

            <!-- Status + knappar -->
            <TextBlock Text="{Binding StatusMessage}" Foreground="Red" Margin="0,0,0,8"
                       TextWrapping="Wrap" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Spara" Command="{Binding SaveCommand}"
                        Width="80" Padding="8,4" Margin="0,0,8,0" IsDefault="True" />
                <Button Content="Avbryt" Command="{Binding CancelCommand}"
                        Width="80" Padding="8,4" IsCancel="True" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
