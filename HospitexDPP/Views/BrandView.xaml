<UserControl x:Class="HospitexDPP.Views.BrandView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HospitexDPP.ViewModels"
             xmlns:views="clr-namespace:HospitexDPP.Views">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:BrandProductsViewModel}">
            <views:BrandProductsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BrandBatchesViewModel}">
            <views:BrandBatchesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BrandSuppliersViewModel}">
            <views:BrandSuppliersView />
        </DataTemplate>
    </UserControl.Resources>

    <DockPanel Background="{DynamicResource BackgroundBrush}">
        <!-- Status bar -->
        <Border DockPanel.Dock="Bottom" Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0"
                Padding="16,8">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <TextBlock Text="{DynamicResource Settings_Language}"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12" />
                    <Button Content="SV" Style="{DynamicResource SecondaryButton}"
                            Padding="8,4" FontSize="11" Margin="0,0,4,0"
                            Command="{Binding SetLanguageCommand}" CommandParameter="sv" />
                    <Button Content="EN" Style="{DynamicResource SecondaryButton}"
                            Padding="8,4" FontSize="11"
                            Command="{Binding SetLanguageCommand}" CommandParameter="en" />
                </StackPanel>
                <TextBlock Text="{Binding StatusInfo}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12" VerticalAlignment="Center" />
            </DockPanel>
        </Border>

        <!-- Tab control -->
        <TabControl Margin="0" Padding="0"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                    Background="{DynamicResource SurfaceBrush}">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource AdminTab}" />
            </TabControl.Resources>

            <TabItem Header="{DynamicResource Tab_Products}">
                <ContentControl Content="{Binding ProductsTab}" />
            </TabItem>
            <TabItem Header="{DynamicResource Tab_Batches}">
                <ContentControl Content="{Binding BatchesTab}" />
            </TabItem>
            <TabItem Header="{DynamicResource Tab_BrandSuppliers}">
                <ContentControl Content="{Binding SuppliersTab}" />
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>
