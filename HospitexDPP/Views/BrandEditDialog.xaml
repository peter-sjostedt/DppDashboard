<Window x:Class="HospitexDPP.Views.BrandEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:HospitexDPP.Converters"
        Title="{Binding DialogTitle}"
        Icon="/dpp.ico"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height" Width="450"
        ResizeMode="NoResize">
    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    </Window.Resources>
    <StackPanel Margin="20">
        <TextBlock Text="Varumärke *" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding BrandName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

        <TextBlock Text="Logotyp URL" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding LogoUrl, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

        <TextBlock Text="Undervarumärke" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding SubBrand, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

        <TextBlock Text="Moderbolag" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding ParentCompany, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

        <TextBlock Text="Handlare" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding Trader, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

        <TextBlock Text="Handlarens plats" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding TraderLocation, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />

        <TextBlock Text="LEI" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding Lei, UpdateSourceTrigger=PropertyChanged}" MaxLength="20" Margin="0,0,0,12" />

        <TextBlock Text="GS1 Company Prefix" FontWeight="SemiBold" Margin="0,0,0,4" />
        <TextBox Text="{Binding Gs1CompanyPrefix, UpdateSourceTrigger=PropertyChanged}" MaxLength="12" Margin="0,0,0,12" />

        <CheckBox Content="Aktiv" IsChecked="{Binding IsActive}" Margin="0,0,0,12"
                  Visibility="{Binding ShowIsActive, Converter={StaticResource BoolToVisibility}}" />

        <TextBlock Text="{Binding StatusMessage}" Foreground="Red" Margin="0,0,0,8"
                   TextWrapping="Wrap" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Spara" Command="{Binding SaveCommand}"
                    Width="80" Padding="8,4" Margin="0,0,8,0" IsDefault="True" />
            <Button Content="Avbryt" Command="{Binding CancelCommand}"
                    Width="80" Padding="8,4" IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Window>
