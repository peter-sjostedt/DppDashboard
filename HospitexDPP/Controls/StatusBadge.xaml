<UserControl x:Class="HospitexDPP.Controls.StatusBadge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border x:Name="BadgeBorder" CornerRadius="10" Padding="8,3" HorizontalAlignment="Left">
        <StackPanel Orientation="Horizontal">
            <Ellipse x:Name="Dot" Width="6" Height="6" Margin="0,0,5,0" />
            <TextBlock x:Name="BadgeText" FontSize="11" FontWeight="SemiBold" />
        </StackPanel>
    </Border>
</UserControl>
