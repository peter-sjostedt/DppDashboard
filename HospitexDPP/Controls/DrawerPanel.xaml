<UserControl x:Class="HospitexDPP.Controls.DrawerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="Root">
        <!-- Overlay -->
        <Border x:Name="Overlay" Background="{DynamicResource OverlayBrush}"
                Visibility="Collapsed" MouseLeftButtonDown="Overlay_Click" />

        <!-- Drawer -->
        <Border x:Name="DrawerBorder"
                HorizontalAlignment="Right"
                Width="{Binding DrawerWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Background="White"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1,0,0,0"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="16" Opacity="0.15" Direction="180" />
            </Border.Effect>
            <Border.RenderTransform>
                <TranslateTransform x:Name="DrawerTranslate" X="400" />
            </Border.RenderTransform>
            <ContentPresenter Content="{Binding DrawerContent, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </Border>
    </Grid>
</UserControl>
