<UserControl x:Class="HospitexDPP.Controls.EmptyState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40">
        <TextBlock x:Name="TitleText" FontSize="18" FontWeight="SemiBold"
                   HorizontalAlignment="Center" Margin="0,0,0,8"
                   Foreground="{DynamicResource TextPrimaryBrush}" />
        <TextBlock x:Name="DescText" FontSize="13"
                   HorizontalAlignment="Center" Margin="0,0,0,20"
                   Foreground="{DynamicResource TextSecondaryBrush}" />
        <Button x:Name="ActionBtn" Style="{DynamicResource PrimaryButton}"
                HorizontalAlignment="Center"
                Visibility="Collapsed" />
    </StackPanel>
</UserControl>
